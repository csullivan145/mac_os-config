#! /usr/bin/env bash

# Installs App Store software.

if ! command -v mas > /dev/null; then
  printf "ERROR: Mac App Store CLI (mas) can't be found.\n"
  printf "       Please ensure Homebrew and mas (i.e. brew install mas) have been installed first."
  exit 1
fi

# Keynote
mas install 409183694

# Numbers
mas install 409203825

# Pages
mas install 409201541

# cleaner-one-disk-clean
mas install 1133028347

# fast-mbox-editor
mas install 1444529635

# magnet
mas install 441258766

# microsoft-remote-desktop
mas install 1295203466

# monday-com
mas install 1298450641

# gif-brewery-3-by-gfycat
mas install 1081413713

# apple-remote-desktop
mas install 409907375

# blackmagic-disk-speed-test
mas install 425264550

# compressor
mas install 424390742
